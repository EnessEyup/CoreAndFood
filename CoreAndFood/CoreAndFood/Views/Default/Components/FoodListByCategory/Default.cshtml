@model IEnumerable<CoreAndFood.Data.Models.Food>

<style>
    .add-to-cart {
        background-color: red;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .add-to-cart:hover {
            background-color: darkred;
            transform: scale(1.05);
        }

        .add-to-cart:active {
            transform: scale(0.95);
        }
</style>

<div class="agile_top_brands_grids">
    @foreach (var item in Model)
    {
        <div class="col-md-3 top_brand_left">
            <div class="hover14 column">
                <div class="agile_top_brand_left_grid">
                    <div class="agile_top_brand_left_grid1">
                        <figure>
                            <div class="snipcart-item block">
                                <div class="snipcart-thumb">
                                    <a href="single.html"><img style="width:175px; height:200px" title=" " alt=" " src="@item.ImageURL" /></a>
                                    <p>@item.Name</p>
                                    <h4>@item.Price $</h4>
                                    <h6>Stock: @item.stock</h6>
                                </div>
                                <div class="snipcart-details top_brand_home_details">
                                    <button class="add-to-cart" data-product-id="@item.FoodID" data-product-name="@item.Name" data-product-price="@item.Price">Add To Cart</button>
                                </div>
                            </div>
                        </figure>
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="clearfix"> </div>
</div>
